# -----------------------------------------------------------------------------
# Site Configuration
# -----------------------------------------------------------------------------
NEXT_PUBLIC_SITE_URL="http://localhost:5173"
NEXT_PUBLIC_SITE_EMAIL="hello@example.com"

# -----------------------------------------------------------------------------
# Database (PostgreSQL - Recommended: Neon)
# Get your database URL from https://neon.tech
# -----------------------------------------------------------------------------
DATABASE_URL="postgresql://user:password@host:5432/database?sslmode=require"
DATABASE_URL_UNPOOLED="postgresql://user:password@host:5432/database?sslmode=require"

# -----------------------------------------------------------------------------
# Authentication (Better Auth)
# https://www.better-auth.com/docs
# -----------------------------------------------------------------------------
BETTER_AUTH_SECRET="your-secret-key-at-least-32-characters-long"
BETTER_AUTH_URL="http://localhost:5173"

# Google OAuth - https://console.cloud.google.com/apis/credentials
AUTH_GOOGLE_ID="your-google-client-id"
AUTH_GOOGLE_SECRET="your-google-client-secret"

# GitHub OAuth - https://github.com/settings/developers
AUTH_GITHUB_ID="your-github-client-id"
AUTH_GITHUB_SECRET="your-github-client-secret"

# -----------------------------------------------------------------------------
# Search (Meilisearch)
# https://www.meilisearch.com/ or self-host
# -----------------------------------------------------------------------------
MEILISEARCH_HOST="http://localhost:7700"
MEILISEARCH_ADMIN_KEY="your-meilisearch-master-key"

# -----------------------------------------------------------------------------
# Cache & Rate Limiting (Redis - Recommended: Upstash)
# https://upstash.com/
# -----------------------------------------------------------------------------
REDIS_REST_URL="https://your-redis-instance.upstash.io"
REDIS_REST_TOKEN="your-upstash-redis-token"

# -----------------------------------------------------------------------------
# Email (Resend)
# https://resend.com/
# -----------------------------------------------------------------------------
RESEND_API_KEY="re_your_resend_api_key"
RESEND_SENDER_EMAIL="notify@yourdomain.com"

# Optional: Enable Resend emails in development mode
ENABLE_RESEND_IN_DEV=false

# -----------------------------------------------------------------------------
# File Storage (S3 Compatible - Recommended: Cloudflare R2 or AWS S3)
# https://developers.cloudflare.com/r2/ or https://aws.amazon.com/s3/
# -----------------------------------------------------------------------------
S3_ENDPOINT="https://your-account-id.r2.cloudflarestorage.com"
S3_REGION="auto"
S3_BUCKET="your-bucket-name"
S3_ACCESS_KEY="your-access-key"
S3_SECRET_ACCESS_KEY="your-secret-access-key"
S3_PUBLIC_URL="https://your-public-bucket-url"

# -----------------------------------------------------------------------------
# AI Services
# -----------------------------------------------------------------------------
# Google AI (Gemini) - https://aistudio.google.com/apikey
GOOGLE_GENERATIVE_AI_API_KEY="your-google-ai-api-key"

# Anthropic (Claude) - https://console.anthropic.com/
ANTHROPIC_API_KEY="your-anthropic-api-key"

# OpenAI - https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-your-openai-api-key"

# Perplexity - https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY="pplx-your-perplexity-api-key"

# Mistral - https://console.mistral.ai/api-keys/
MISTRAL_API_KEY="your-mistral-api-key"

# Jina AI (Optional) - https://jina.ai/reader/
JINA_API_KEY="jina_your_api_key"

# -----------------------------------------------------------------------------
# Screenshots (ScreenshotOne)
# https://screenshotone.com/
# -----------------------------------------------------------------------------
SCREENSHOTONE_ACCESS_KEY="your-screenshotone-access-key"

# -----------------------------------------------------------------------------
# Analytics
# -----------------------------------------------------------------------------
# PostHog - https://posthog.com/
NEXT_PUBLIC_POSTHOG_API_KEY="phc_your_posthog_project_api_key"
NEXT_PUBLIC_POSTHOG_HOST="https://app.posthog.com"

# Plausible - https://plausible.io/ or self-hosted
NEXT_PUBLIC_PLAUSIBLE_DOMAIN="yourdomain.com"
NEXT_PUBLIC_PLAUSIBLE_URL="https://plausible.io"
PLAUSIBLE_API_KEY="your-plausible-api-key"

# -----------------------------------------------------------------------------
# Newsletter (Beehiiv)
# https://www.beehiiv.com/
# -----------------------------------------------------------------------------
BEEHIIV_API_KEY="your-beehiiv-api-key"
BEEHIIV_PUBLICATION_ID="pub_your_publication_id"

# -----------------------------------------------------------------------------
# Payments (Dodo Payments)
# https://dodopayments.com/
# -----------------------------------------------------------------------------
DODO_PAYMENTS_API_KEY="your-dodo-payments-api-key"
DODO_PAYMENTS_WEBHOOK_KEY="your-dodo-webhook-key"

# Stripe (Optional/Future) - https://stripe.com/
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""

# -----------------------------------------------------------------------------
# GitHub API
# https://github.com/settings/tokens
# -----------------------------------------------------------------------------
GITHUB_TOKEN="your-github-personal-access-token"

# -----------------------------------------------------------------------------
# Social Media Automation (Optional)
# Set these if you want to auto-post to social media
# -----------------------------------------------------------------------------
# Twitter/X API - https://developer.twitter.com/
TWITTER_API_KEY=""
TWITTER_API_SECRET=""
TWITTER_ACCESS_TOKEN=""
TWITTER_ACCESS_SECRET=""

# Bluesky - https://bsky.app/
BLUESKY_USERNAME=""
BLUESKY_PASSWORD=""

# Mastodon
MASTODON_ACCESS_TOKEN=""

# -----------------------------------------------------------------------------
# Stack Analyzer (Optional - for tech stack detection)
# -----------------------------------------------------------------------------
STACK_ANALYZER_API_URL="http://localhost:3000/api"
STACK_ANALYZER_API_KEY="your-stack-analyzer-api-key"

# -----------------------------------------------------------------------------
# Supabase (Optional - for migration scripts only)
# https://supabase.com/
# -----------------------------------------------------------------------------
# SUPABASE_URL="https://your-project.supabase.co"
# SUPABASE_ANON_KEY="your-supabase-anon-key"
